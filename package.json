{
  "name": "@artlab/crypto",
  "version": "0.1.0",
  "description": "The missing crypto module for Node.js. Bcrypto provides you with a consistent interface across Node.js and the browser.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "scripts": {
    "prerelease": "cross-env CI=1 npm run build:full && npm run test && npm run lint",
    "release": "np",
    "build": "al-tsc",
    "build:full": "npm ci --ignore-scripts && npm run clean && npm run build",
    "coverage": "al-nyc report --reporter=text-summary",
    "precoverage": "npm test",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "al-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier:cli": "al-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "npm run prettier:cli -- --check",
    "prettier:fix": "npm run prettier:cli -- --write",
    "format": "npm run prettier:fix",
    "clean": "al-clean dist *.tsbuildinfo",
    "pretest": "npm run clean && npm run build",
    "test": "al-nyc npm run mocha",
    "test:ci": "al-nyc npm run mocha",
    "posttest": "npm run lint",
    "premocha": "npm run build",
    "preunit": "npm run build",
    "mocha": "al-mocha \"dist/__tests__/**/*.js\"",
    "unit": "al-mocha \"dist/__tests__/unit/**/*.js\""
  },
  "author": "ty <towyuan@outlook.com>",
  "license": "MIT",
  "dependencies": {
    "@artlab/bsert": "^0.1.2",
    "bcrypto": "^5.2.0"
  },
  "devDependencies": {
    "@artlab/build": "^6.2.2",
    "@artlab/eslint-config": "^8.1.2",
    "@artlab/testlab": "^3.3.2",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.157",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "cross-env": "^7.0.2",
    "mocha": "^8.0.1",
    "np": "^6.3.0"
  },
  "keywords": [],
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
